<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFFFF"
    >

    <ImageView
        android:id="@+id/bluetoothIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_blue_icon"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/blueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignTop="@id/bluetoothIcon"
        android:layout_toRightOf="@id/bluetoothIcon"
        />
    <TextView
        android:id="@+id/blueAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MAC ADDRESS"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@id/blueName"
        android:layout_alignLeft="@id/blueName"

        />

</RelativeLayout>